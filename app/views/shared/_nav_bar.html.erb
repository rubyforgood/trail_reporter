<%= nav_bar :brand => "Trail Reporter", :fixed => :top, :responsive => true do %>
  <%= menu_group do %>
    <%= menu_item "Home", root_path %>

    <% if current_user %>
      <%= menu_item "Reports", reports_path %>
      <%= menu_item "Categories", categories_path %>
      <%= menu_item "Tags", tags_path %>
      <%= menu_item "Trails", trails_path %>
    <% end %>        

  <% end %>
  <% if current_user %>
    <%= menu_group pull: :right do %>
      <%= menu_item "Log Out", destroy_user_session_path, :method => :delete %>
    <% end %>
  <% else %>
    <%= menu_group pull: :right do %>
      <%= menu_item "Sign In", new_user_session_path %>
      <%= menu_item "Sign Up", new_user_registration_path %>
    <% end %>
  <% end -%>
<% end %>